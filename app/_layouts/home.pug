	script.
		$(document).ready(function(){

			svg4everybody();

			var lSbtn = $('#languageSettings-button');
			var lSdropmenu = $('#languageSettings-dropmenu');

			lSbtn.click(function(){
				if (lSdropmenu.hasClass('hide')){
					lSdropmenu.fadeIn(50)
					lSdropmenu.removeClass('hide');
				}else{
					lSdropmenu.fadeOut(100)
					lSdropmenu.addClass('hide')
				}
			});

			$('#buttonProfile').click(function(){
				if ($('#profile-dropdown').hasClass('hide')){
					$('#profile-dropdown').fadeIn(50)
					$('#profile-dropdown').removeClass('hide');
				}else{
					$('#profile-dropdown').fadeOut(100)
					$('#profile-dropdown').addClass('hide')
				}
			});

			$(document).click(function (e){
				if (!lSbtn.is(e.target) && lSbtn.has(e.target).length === 0) {
					lSdropmenu.fadeOut(100);
					lSdropmenu.addClass('hide')
				}

				if ($('#dd-exit-btn').is(e.target) || !$('#profile-dropdown').is(e.target) && $('#profile-dropdown').has(e.target).length === 0 && !$('#buttonProfile').is(e.target) && $('#buttonProfile').has(e.target).length === 0) {
					$('#profile-dropdown').fadeOut(100);
					$('#profile-dropdown').addClass('hide')
				}
			});

			$('#header-btnLogIn').click(function(){
				$('#LogIn-form').bPopup({
					positionStyle: 'fixed',
					closeClass: 'LogIn-form_close-btn',
					onOpen: function() { $('body').addClass('fixed'); },
					onClose: function() { $('body').removeClass('fixed') }
									
				});
			});
			$('#LogIn-form_btnLogUp').click(function(){
				$('#LogUp-form').bPopup({
					positionStyle: 'fixed',
					closeClass: 'LogUp-form_close-btn',
					onOpen: function() { $('body').addClass('fixed'); },
					onClose: function() { $('body').removeClass('fixed') }
									
				});
			});

			$('#header-popup-map').click(function(){
				$('#popup-map').bPopup({
					positionStyle: 'fixed',
					closeClass: 'popup-map_close-btn',
					onOpen: function() { $('body').addClass('fixed'); },
					onClose: function() { $('body').removeClass('fixed') }
									
				});
			});

			$('#header-language-popup').click(function(){
				$('#language-popup').bPopup({
					positionStyle: 'fixed',
					closeClass: 'language-popup_close-btn',
					onOpen: function() { $('body').addClass('fixed'); },
					onClose: function() { $('body').removeClass('fixed') }
									
				});
			});

			$('#header-currency-popup').click(function(){
				$('#currency-popup').bPopup({
					positionStyle: 'fixed',
					closeClass: 'currency-popup_close-btn',
					onOpen: function() { $('body').addClass('fixed'); },
					onClose: function() { $('body').removeClass('fixed') }
									
				});
			});


			$('.mapSelect').select2();

			$('.select2').one('click', function(){
				$('.select2-search--dropdown').prepend('<div class="select2-search--dropdown__search-img">')
				$('.select2-search--dropdown').append('<div class="select2-search--dropdown__cross">')
			});	
			$('.select2').click(function(){
				$('.select2-search__field').on('input', function(){
					if(this.value.length){
						$(this).next().css('display', 'block')
					}else{
						$(this).next().css('display', 'none')
					}
				});
				$('.select2-search--dropdown__cross').click(function(){
					$(this).prev().val('');
					$(this).prev().trigger('input')
				});
			});

			$('.dd-popup-search').on('input', function(){
				var str = $(this).val().toLowerCase();
				if (str.length <= 1){
					$('.dd-search-items .dd-search-item').show();
				}
				$('.dd-search-items .dd-search-item').each(function(){
					if ($(this).text().toLowerCase().indexOf(str) < 0){
						$(this).hide();
					}
				});
			});



		});

