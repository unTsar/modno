block scripts
	script.
		$(document).ready(function(){
			$('.buttonOpSw').click(function(){
				if($(this).parents('.line').hasClass('checked')){
					$(this).parents('.line').removeClass('checked')
				}else{
					$(this).parents('.line').addClass('checked')
				}
			})
			
			let timeoutID;
			$('.btn-category').mouseenter(function(){
				timeoutID = setTimeout(function(){
					$('#subCategory-popup').show();
				}, 100);
			});
			$('.category-h2').mouseleave(function(){
				clearTimeout(timeoutID);
				$('#subCategory-popup').hide();
			});
			$('.mknav-buttonSwitch').click(function(){
				$(this).addClass('active');
				$('.mknav-buttonSwitch').not(this).removeClass('active');
				$('.mknav-buttonSwitch').addClass('disabled');
				setTimeout(function(){
					$('.mknav-buttonSwitch').removeClass('disabled');
				}, 350);
			});
			$('.mknav-buttonSwitch.shops').click(function(){
				$('.marketing-table .items-table').removeClass('active');
				$('.marketing-table .items-table').fadeOut(250);
				$('.marketing-table .sidebar').removeClass('active');
				$('.marketing-table .sidebar').fadeOut(250);
				setTimeout(function(){
					$('.marketing-table .items-table.shops').addClass('active');
					$('.marketing-table .items-table.shops').fadeIn(250);
					$('.marketing-table .sidebar.shops').addClass('active');
					$('.marketing-table .sidebar.shops').fadeIn(250);
				}, 250);
			});
			$('.mknav-buttonSwitch.molls').click(function(){
				$('.marketing-table .items-table').removeClass('active');
				$('.marketing-table .items-table').fadeOut(250);
				$('.marketing-table .sidebar').removeClass('active');
				$('.marketing-table .sidebar').fadeOut(250);
				setTimeout(function(){
					$('.marketing-table .items-table.molls').addClass('active');
					$('.marketing-table .items-table.molls').fadeIn(250);
					$('.marketing-table .sidebar.molls').addClass('active');
					$('.marketing-table .sidebar.molls').fadeIn(250);
				}, 250);
			});
			$('.mknav-buttonSwitch.products').click(function(){
				$('.marketing-table .items-table').removeClass('active');
				$('.marketing-table .items-table').fadeOut(250);
				setTimeout(function(){
					$('.marketing-table .items-table.products').addClass('active');
					$('.marketing-table .items-table.products').fadeIn(250);
				}, 250);
			});
			$(window).resize(function(){
				if($(window).width() >= 1025){
					$('.mknav-buttonSwitch.products').removeClass('active');
					$('.marketing-table .items-table.products').removeClass('active');
					$('.marketing-table .items-table.products').fadeOut(250);

					$('.mknav-buttonSwitch.shops').addClass('active');
					$('.marketing-table .items-table.shops').addClass('active');
					$('.marketing-table .items-table.shops').fadeIn(250);
				}
			});

			$('#mk-products-btnLogIn').click(function(){
				popupID = '#LogIn-form'
			});
			$('#mk-products-btnLogUp').click(function(){
				popupID = '#LogUp-form'
			});


		});

